<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#9C000000"
    tools:context=".AnasayfaActivity">

    <android.support.constraint.ConstraintLayout
        android:id="@+id/consRandevuAl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="-5dp">

        <TextView
            android:id="@+id/txtRandevuAl"
            android:layout_width="412dp"
            android:layout_height="21dp"
            android:layout_marginTop="16dp"
            android:background="#39853A"
            android:text="                                           RANDEVU AL"
            android:textColor="#FCFFFFFF"
            app:layout_constraintBottom_toTopOf="@+id/imgRandevuAl"
            app:layout_constraintTop_toTopOf="parent"
            tools:layout_editor_absoluteX="-1dp" />

        <ImageView
            android:id="@+id/imgRandevuAl"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_marginTop="16dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/txtRandevuAl"
            app:srcCompat="@drawable/randevu"
            tools:layout_editor_absoluteX="0dp" />

    </android.support.constraint.ConstraintLayout>

    <android.support.constraint.ConstraintLayout
        android:id="@+id/consGecmisRandevu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@+id/consRandevuAl">

        <TextView
            android:id="@+id/txtRandevuGecmisi"
            android:layout_width="410dp"
            android:layout_height="19dp"
            android:layout_marginTop="16dp"
            android:background="#CE9B1A"
            android:text="                                            RANDEVU GEÇMİŞİ"
            android:textColor="#FFFFFF"
            app:layout_constraintTop_toTopOf="parent"
            tools:layout_editor_absoluteX="1dp" />

        <ImageView
            android:id="@+id/imgGecmis"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_marginTop="16dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/txtRandevuGecmisi"
            app:srcCompat="@drawable/rdv_gecmis" />

    </android.support.constraint.ConstraintLayout>

    <android.support.constraint.ConstraintLayout
        android:id="@+id/consProfil"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/consGecmisRandevu"
        tools:layout_editor_absoluteX="-2dp">

        <TextView
            android:id="@+id/txtProfil"
            android:layout_width="409dp"
            android:layout_height="22dp"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="16dp"
            android:autoText="false"
            android:background="#4BA5EC"
            android:text="                                                    PROFİL"
            android:textColor="#FFFFFF"
            app:layout_constraintBottom_toTopOf="@+id/imgProfil"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.0"
            tools:layout_editor_absoluteX="2dp" />

        <ImageView
            android:id="@+id/imgProfil"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:srcCompat="@drawable/profil1"
            tools:layout_editor_absoluteX="0dp" />

    </android.support.constraint.ConstraintLayout>

</android.support.constraint.ConstraintLayout>